<% include templates/header.ejs %>
<body>

<div class="container" style="background-color: #eee">
    <% include templates/body.ejs %>
    <div class="row content">
        <% include templates/navbar.ejs %>
        <div class="col-sm-9">
            <h3>Πελάτες</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Επωνυμία</th>
                    <th>ΑΦΜ</th>
                    <th>Taxis Username</th>
                    <th>Taxis Password</th>
                    <th>ΑΜΚΑ</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <% customers.forEach(function(customers){%>
                <tr>
                    <td><a href='/users/customers/<%=customers._id %>'><%=customers.name%></a></td>
                    <td><%=customers.vatId%></td>
                    <td><%=customers.taxisUser%></td>
                    <td><%=customers.taxisPass%></td>
                    <td><%=customers.amka%></td>
                    <td><%=customers.email%></td>
                </tr>
                <%})%>
                </tbody>
            </table>

        </div>
    </div>
</div>

<% include templates/footer.ejs %>
</body>

</html>